library(mailR)  


for (i in 1:3) {

write.csv(d[i,],paste('E:\\salary\\',d[i,1],'.csv'))
  
  
recipients <- as.character(d[i,3])   # 收件人  
sender = "31681335@qq.com"  # 发件人  
title = "2019年4月工资"   # 主题  
send.mail(from = sender,  to = recipients,  subject = title,  body = '测试一下',  
          encoding = "utf-8", smtp = list( host.name = "smtp.qq.com", 
                                           port = 587,user.name = sender,  passwd = "zvouvjodtttbbjcc",  ssl = TRUE ),  
          authenticate = TRUE, send= TRUE,attach.files = paste('E:\\salary\\',d[i,1],'.csv'))

}
